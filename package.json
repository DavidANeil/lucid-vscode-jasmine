{
	"name": "lucid-jasmine",
	"displayName": "Jasmine Bazel Test Runner",
	"description": "Allows Jasmine unit tests to be run from the editor using Bazel commands",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"keywords": ["bazel", "jasmine", "test", "runner"],
	"activationEvents": [
		"onLanguage:typescript",
		"onCommand:lucidbazeltest.runTest"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "lucidbazeltest.runTest",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
